			<value>1</value>
		</property>
    	<property name="advice">
        	<ref bean="tipAdvice"/>
    	</property>
    	<property name="patterns">
        	<list>
        		<value>.*Bo.*Query</value>
            	<value>.*Bo.*Add</value>
            	<value>.*Bo.*Modify</value>
            	<value>.*Bo.*Del</value>
            	<value>.*Bo.*Done</value>
            	<value>.*Bo.*Login</value>
            	<value>.*Bo.*WithTs</value>
            	<value>.*Bo.*Get</value>
            	<value>.*Bo.*Save</value>
            	<value>.*Bo.*Init</value>
            	<value>.*Bo.*Update</value>
        	</list>
    	</property>
	</bean>

