package com.hh;
import java.util.Scanner;

public class JavaTest {
	
	///////
	public static void main(String[] args) {
		Scanner sc =new Scanner(System.in) ;
		int sum=0;
		int n1=sc.nextInt();
		int a[] = new int [n1] ;
		for(int i=0;i<n1;i++) {
			a[i]=sc.nextInt();	
			sum+=a[i] ;
		}
		for(int i=0;i<1000;i++) {
			if((sum+i)%n1==0&&(sum+i)%2==0){
				System.out.println(i);
				break;
			}
		}
	}
	
	
	////
		
}
