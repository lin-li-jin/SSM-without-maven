package com.hh;
import java.util.Scanner;

public class JavaTest {
	
	public static void main(String[] args) {
		
		Scanner sc =new Scanner(System.in) ;
	int sum=0;
		int n=sc.nextInt();
		int sa[] = new int [n] ;
		for(int i=0;i<n;i++) {
			sa[i]=sc.nextInt();	
			sum+=sa[i] ;
		}
	
		for(int i=0;i<1000;i++) {
			if((sum+i)%n==0&&(sum+i)%2==0){
				System.out.println(i);
				break;
			}
				
		}
	
}
		
}
